{{template "admin" .}}

{{define "page-title"}}
Reservations Calendar
{{ end }}

{{define "content"}}
{{$now := index .Data "now"}}
{{$rooms := index .Data "rooms"}}
{{$dim := index .IntMap "days_in_month"}}
<div class="col-md-12">
  <div class="text-center">
    <h3>{{formatDate $now "January"}} {{index .StringMap "this_month_year"}}</h3>
  </div>
  <div class="float-left">
      <a href="/admin/reservations-calendar?y={{index .StringMap "prev_month_year"}}&m={{index .StringMap "prev_month"}}" class="btn btn-secondary-outline">
        &lt;&lt;
        </a>
  </div>
  <div class="float-right">
    <a href="/admin/reservations-calendar?y={{index .StringMap "next_month_year"}}&m={{index .StringMap "next_month"}}" class="btn btn-secondary-outline">
        &gt;&gt;
        </a>
  </div>
  <div class="clearfix"></div>

  {{range $rooms}}
  {{$roomId := .ID}}
  <h4 class="mt-4">{{.RoomName}}</h4>
  <div class="table-response">
    <table class="table table-bordered table-sm">
      
      <tr class="table-dark">
        {{range $index := iterate $dim}}
        <td class="text-center">
          {{$index}}
        </td>
        {{end}}
      </tr>
      <tr class="table-dark">
        {{range $index := iterate $dim}}
        <td class="text-center">
          <input type="checkbox" name="" id="">
        </td>
        {{end}}
      </tr>
      
    </table>
  </div>
  {{end}}
</div>
{{ end }}
